<%- include('partials/header.ejs') %>

    <form id="main" action="/Submit" method="post">
        <h1>ADD YOUR BOOK</h1>
        <img src="https://covers.openlibrary.org/b/isbn/<%= locals.isbn %>-S.jpg" alt="">
        <input required class="inp" name="title" placeholder="Title" value="<%= locals.title %>" type="text">
        <textarea required class="inp" name="description" maxlength="150" placeholder="Description..." id="" rows="3"></textarea>
        <span>
            <input required class="inp" name="ISBN" placeholder="Book ISBN" value="<%= locals.isbn %>" disabled type="text">
            <input required class="inp" name="rating" placeholder="Rating" type="text">
        </span>
        <button type="submit">Submit</button>
    </form>


    <%- include('partials/footer.ejs') %>